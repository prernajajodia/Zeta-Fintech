<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountEntryActivity"
    android:background="@color/light_bg"
    >

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_one"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:text="Name"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_enter_goal"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:textAlignment="textStart"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_one"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/goals_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/no_background"
            android:hint="Ruchi Pakhle"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:textCursorDrawable="@drawable/cursor" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_two"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:text="Account Number"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_one" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/enter_acc"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:textAlignment="textStart"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_two"
        app:layout_constraintTop_toBottomOf="@id/card_enter_goal"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/goals_edit_acc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/no_background"
            android:hint="1111005555"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:textCursorDrawable="@drawable/cursor" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_three"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:text="Phone Number"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_two" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/enter_phone"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:textAlignment="textStart"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_three"
        app:layout_constraintTop_toBottomOf="@+id/enter_acc"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/edit_dob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/no_background"
            android:hint="9167527193"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:textCursorDrawable="@drawable/cursor" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_four"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:text="DOB"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_three" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/enter_dob"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:textAlignment="textStart"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_four"
        app:layout_constraintTop_toBottomOf="@+id/enter_phone"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/no_background"
            android:hint="DD/MM/YYYY"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:textCursorDrawable="@drawable/cursor" />

    </soup.neumorphism.NeumorphCardView>













</androidx.constraintlayout.widget.ConstraintLayout>