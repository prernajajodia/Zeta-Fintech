<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransHistActivity"
    android:background="@color/light_bg">

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_trans1"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="$ 4.5678&#10;Venice Outreach, London"
        android:layout_marginStart="50dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_trans2"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="$ 3.7865&#10; Dribble Subscription, UK"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_trans1" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_trans3"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="$ 5.5678&#10; BOI Transfer, London"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_trans2" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_trans4"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="$ 6.5678&#10; Pizzeria, Boston"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_trans3" />



</androidx.constraintlayout.widget.ConstraintLayout>